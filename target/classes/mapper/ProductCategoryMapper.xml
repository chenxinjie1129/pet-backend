<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.petshome.api.repository.ProductCategoryMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.petshome.api.model.entity.ProductCategory">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="parent_id" property="parentId" />
        <result column="level" property="level" />
        <result column="sort" property="sort" />
        <result column="icon" property="icon" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 公共列 -->
    <sql id="Base_Column_List">
        id, name, parent_id, level, sort, icon, status, create_time, update_time
    </sql>

    <!-- 根据ID查询商品分类 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM t_product_category
        WHERE id = #{id}
    </select>

    <!-- 查询所有商品分类 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM t_product_category
        ORDER BY sort ASC
    </select>

    <!-- 根据父分类ID查询子分类 -->
    <select id="selectByParentId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM t_product_category
        WHERE parent_id = #{parentId}
        ORDER BY sort ASC
    </select>

    <!-- 根据级别查询分类 -->
    <select id="selectByLevel" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM t_product_category
        WHERE level = #{level}
        ORDER BY sort ASC
    </select>

    <!-- 插入商品分类 -->
    <insert id="insert" parameterType="com.petshome.api.model.entity.ProductCategory" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_product_category (
            name, parent_id, level, sort, icon, status, create_time, update_time
        ) VALUES (
            #{name}, #{parentId}, #{level}, #{sort}, #{icon}, #{status}, NOW(), NOW()
        )
    </insert>

    <!-- 更新商品分类 -->
    <update id="update" parameterType="com.petshome.api.model.entity.ProductCategory">
        UPDATE t_product_category
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="level != null">level = #{level},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="status != null">status = #{status},</if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除商品分类 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM t_product_category
        WHERE id = #{id}
    </delete>

    <!-- 更新商品分类状态 -->
    <update id="updateStatus">
        UPDATE t_product_category
        SET status = #{status}, update_time = NOW()
        WHERE id = #{id}
    </update>
</mapper>
